@{
    ViewBag.Title = "Format ISINs";
    ViewBag.Subtitle = "Version 2.0";
    ViewBag.PageClass = "page-utility page-utility-format-isins";
}
@section scripts {
    @Scripts.Render("~/bundles/page-utility-format-isins")
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                @*<h3 class="box-title">etc.</h3>*@
            </div><!-- /.box-header -->
            <div class="box-body">
                <div class="form-group">
                    <label for="isin-list-textarea">ISIN List:</label>
                    <textarea class="form-control" rows="20" id="isin-list-textarea"></textarea>
                </div>
                <input class="btn btn-primary pull-right btn-format-isins" type="button" data-loading-text="Processing..." value="Format"/>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->