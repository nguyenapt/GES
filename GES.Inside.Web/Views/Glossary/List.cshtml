@{
    ViewBag.Title = "Glossary";
    ViewBag.PageClass = "page-glossary page-glossary-index";
}
@Scripts.Render("~/bundles/tinymce")
@section scripts {
    @Scripts.Render("~/bundles/page-glossary-list")
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">                
            </div><!-- /.box-header -->
            <div class="box-body">
                <div id="newGlossaryModalDialog" class="inline-div" title=""></div>
                @Ajax.ActionLink("New Term/Category", "CreateForm_Glossary", "Glossary",
                    new
                    {
                        Name = "",

                    }, new AjaxOptions
                    {
                        UpdateTargetId = "newGlossaryModalDialog",
                        HttpMethod = "Post",
                        OnBegin = "$('.btn-new-glossary').button('loading')",
                        OnSuccess = "openNewGlossaryDialog()",
                        OnComplete = "resetNewGlossaryButton()"
                    }, new
                    {
                        @class = "btn btn-success btn-new-glossary",
                        @data_loading_text = "Please wait..."
                    })

                <input class="btn batch-delete-glossary btn-danger pull-right" disabled type="button" value="Delete Selected Term(s)" />
                <br />
                <br />

                <table id="tblGlossaryList" class="table table-bordered table-striped"></table>                
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div>