@using GES.Inside.Web.Configs
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="shortcut icon" href="~/Content/img/favicon.ico"/>
    <!-- Windows Tile -->
    <meta name="application-name" content="Sustainalytics Inside" />
    <meta name="msapplication-config" content="browserconfig.xml" />

    <title>@ViewBag.Title | @SiteSettings.SiteName</title>
    @Scripts.Render("~/bundles/modernizr")
    
    <!-- Bootstrap 3.3.5 -->
    @Styles.Render("~/bundles/css-bootstrap")
    <!-- Plugins CSS -->
    @Styles.Render("~/bundles/css-plugins")
    @Styles.Render("~/Content/plugins/jquery-ui-bootstrap/jquery-ui-bundle")
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <!-- and AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    @Styles.Render("~/bundles/css-adminlte-theme")
    <!-- Additional CSS bundles -->
    @RenderSection("styling", required: false)
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-33925563-6"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-33925563-6');
    </script>

</head>
<body class="hold-transition skin-yellow sidebar-mini @ViewBag.PageClass" ng-app="GesInsideApp">
    <div class="wrapper">
        <!-- Header -->
        @Html.Partial("_Header")
        <!-- Left side column. contains the logo and sidebar -->
        @Html.Partial("_Sidebar")
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" ng-controller="@ViewBag.NgController">
            @if (IsSectionDefined("contentHeader"))
            {
                @RenderSection("contentHeader", false)
            }
            else
            {
                <!-- Content Header (Page header) -->
                if (@ViewBag != null && @ViewBag.Title != null)
                {
                    <!-- Content Header (Page header) -->
                    <section class="content-header">
                        <h1>
                            @ViewBag.Title
                            <small>@ViewBag.Subtitle</small>
                        </h1>
                        <div class="page-buttons hidden-print">
                            @RenderSection("pageButtons", false)
                        </div>
                        @Html.MvcSiteMap().SiteMapPath("SiteMapPathHelperModelAdminLTE")
                    </section>
                }
            }
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
        <!-- Footer -->
        @Html.Partial("_Footer")
    </div><!-- ./wrapper -->
    <!-- jQuery 2.1.4 -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @*@Scripts.Render("~/bundles/jquery.unobtrusive")*@
    
    @Scripts.Render("~/bundles/angular")
        
    <!-- Bootstrap 3.3.5 -->
    @Scripts.Render("~/bundles/bootstrap")
    <!-- Others: i.e. FastClick, slimScroll -->
    @Scripts.Render("~/bundles/others")

    <!-- Sparkline -->
    @*<script src="plugins/sparkline/jquery.sparkline.min.js"></script>*@
    <!-- ChartJS 1.0.1 -->
    @*<script src="plugins/chartjs/Chart.min.js"></script>*@

    <!-- AdminLTE App -->
    <script src="~/Content/js/app.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Content/js/demo.js"></script>

    @Scripts.Render("~/bundles/angular-module")



    @RenderSection("scripts", required: false)

</body>
</html>

