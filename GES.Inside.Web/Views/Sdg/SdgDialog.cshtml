
@using GES.Common.Resources

<div class="modal fade" id="sdg-dialog" style="display: none;">
    <div class="modal-dialog modal-lg" style="width: 665px; height: 700px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title text-bold">{{(editingSdg.Sdg_Id === undefined || editingSdg.Sdg_Id === 0) ? "Add" : "Edit"}} SDG</h4>
            </div>
            <br />
            <div class="modal-body" style="min-height: 0; max-height: 630px; overflow-y: auto" ng-form="sdgDialogForm">
                <div class="box-body box-edit">
                    <dl class="dl-horizontal">
                        <dt class="required-field">Icon</dt>
                        <dd>
                            <div style="float: left;" class="not-outer-right-btn" ng-show="editingSdg.DocumentId !== undefined || file !== null">
                                <img style="width: 60px" alt="" id="sdg-img" src="@Url.Action("Download", "DocumentMgmt", null, Request?.Url?.Scheme)?documentId={{editingSdg.DocumentId}}"/>
                            </div>
                            <div ngf-drop ngf-select ngf-change="changeFile($file)" ng-model="file" class="drop-box"
                                 ngf-drag-over-class="'dragover'"
                                 ngf-fix-orientation="true"
                                 style="height: 35px; margin-top: 0; float: left; padding: 0 10px; width: auto" ngf-pattern="'image/*'" ngf-accept="'image/*'">
                                <div class="drop-box-text">@Resources.AddNewIcon</div>
                            </div>
                            <div ngf-no-file-drop>File Drag/Drop is not supported for this browser</div>
                        </dd>
                    </dl>

                    <dl class="dl-horizontal">
                        <dt class="required-field">SDG Name</dt>
                        <dd>
                            <input type="text" ng-model="editingSdg.Sdg_Name" class="form-control form-control-text" ng-required="true" name="sdgName" />
                        </dd>
                    </dl>

                    <dl class="dl-horizontal">
                        <dt>SDG Link</dt>
                        <dd>
                            <input type="text" ng-model="editingSdg.Sdg_Link" class="form-control form-control-text" name="sdgLink" />
                        </dd>
                    </dl>
                </div>
            </div>
            <br />
            <div class="modal-footer">
                <input class="btn btn-success" type="button" value="Save" data-dismiss="modal" ng-click="saveSdg()" ng-disabled="sdgDialogForm.$invalid || (editingSdg.DocumentId === undefined && file === null)"/>
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel"/>
            </div>
        </div>
    </div>
</div>