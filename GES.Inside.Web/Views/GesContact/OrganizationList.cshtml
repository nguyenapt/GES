@using GES.Common.Resources
<script type="text/javascript">
    var clientStatus = @Html.Raw(Json.Encode(ViewBag.ClientsStatuses));
    var progressStatuses = @Html.Raw(Json.Encode(ViewBag.ClientProgressStatuses));
    var industries = @Html.Raw(Json.Encode(ViewBag.Industries));
    var countries = @Html.Raw(Json.Encode(ViewBag.Countries));
</script>
<div class="modal fade" id="contact-organization-dialog" style="display: none;z-index:1000000000">
    <div class="modal-dialog modal-lg" style="width: 800px; height: auto">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title text-bold">@Resources.SelectOrganizationInformation</h4>
            </div>
            <div class="modal-body" style="min-height: 0; max-height: 600px; overflow-y: auto">
                <div class="">
                    <table id="tblOrganization" class="table table-bordered table-striped"></table>
                    <div id="myPager"></div>
                </div>
            </div>
            <div class="modal-footer">
                 <input class="btn btn-success" type="button" value="@Resources.Select" data-dismiss="modal" id="btn-organization-select" ng-click="organizationSelect(editingGesContact)"  />
                <input type="button" class="btn btn-default" data-dismiss="modal" value="@Resources.Cancel" />
            </div>
        </div>
    </div>
</div>
