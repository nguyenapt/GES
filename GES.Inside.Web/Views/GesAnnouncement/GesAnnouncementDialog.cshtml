@using GES.Common.Resources

<div class="modal fade" id="announcement-dialog" style="display: none;">
    <div class="modal-dialog modal-lg" style="width: 800px; height: auto">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title text-bold">{{editingAnnouncement.GesAnnouncementId === "00000000-0000-0000-0000-000000000000" ? "Add New" : "Edit"}} Announcement</h4>
            </div>
            <div class="modal-body" style="min-height: 0; max-height: 600px; overflow-y: auto">
                <div class="row" style="margin-top:15px">                    
                    <div class="col-lg-3 col-md-3 col-xs-12" style="font-weight:bold">Announcement Date</div>
                    <div class="col-lg-3 col-md-3 col-xs-12">
                        <input type="date" style="border: none; width: 100%; -webkit-box-shadow: none" name="AnnouncementDate{{$index}}" id="AnnouncementDate{{$index}}" ng-model="editingAnnouncement.AnnouncementDate" ng-model-options="{timezone: 'utc'}" ng-required="true" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" placeholder="yyyy/MM/dd" />
                    </div>
                </div>                
                <div class="row" style="margin-top:15px">
                    <div class="col-lg-3 col-md-3 col-xs-12" style="font-weight:bold">Title</div>
                    <div class="col-lg-9 col-md-9 col-xs-12">
                        <input type="text" ng-model="editingAnnouncement.Title" class="form-control form-control-text" name="title" />
                    </div>
                </div>
                <div class="row" style="margin-top:15px">
                    <div class="col-lg-3 col-md-3 col-xs-12" style="font-weight:bold">Link Title</div>
                    <div class="col-lg-9 col-md-9 col-xs-12">
                        <input type="text" ng-model="editingAnnouncement.LinkTitle" class="form-control form-control-text" name="linktitle" />
                    </div>
                </div>
                <div class="row" style="margin-top:15px">
                    <div class="col-lg-3 col-md-3 col-xs-12" style="font-weight:bold">Content</div>
                    <div class="col-lg-9 col-md-9 col-xs-12">
                        <textarea type="text" ng-model="editingAnnouncement.Content" class="form-control form-control-text" name="content" rows="10"></textarea>
                    </div>
                </div>                
            </div>
            <div class="modal-footer">
                <input class="btn btn-success" type="button" value="Submit" data-dismiss="modal" id="btn-submit-announcement" ng-click="saveAnnouncement(editingAnnouncement)" />
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel" />
            </div>
        </div>
    </div>
</div>