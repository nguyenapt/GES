@using GES.Inside.Web.Helpers
@{
    ViewBag.PageClass = "page-portfolio page-portfolio-controactiv-presets";
}
@section scripts {
    @Scripts.Render("~/bundles/page-portfolio-controactiv-presets")
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                @*<h3 class="box-title">Data Table With Full Features</h3>*@
            </div><!-- /.box-header -->
            <div class="box-body">
                <div id="newControActivPresetModalDialog" class="inline-div" title=""></div>
                @Ajax.ActionLink("New Preset", "CreateForm_ControActivPreset", "Portfolio",
                    new
                    {
                        Name = "",

                    }, new AjaxOptions
                    {
                        UpdateTargetId = "newControActivPresetModalDialog",
                        HttpMethod = "Post",
                        OnBegin = "$('.btn-new-controactiv-preset').button('loading')",
                        OnSuccess = "OpenNewControActivPresetDialog()",
                        OnComplete = "resetNewControActivPresetButton()"
                    }, new
                    {
                        @class = "btn btn-success btn-new-controactiv-preset",
                        @data_loading_text = "Please wait..."
                    })

                <input class="btn batch-delete-controactiv-presets btn-danger pull-right" disabled type="button" data-loading-text="Processing..." value="Delete Selected Preset(s)"/>
                <br/>
                <br/>

                <table id="tblcontroactivpresets" class="table table-bordered table-striped"></table>
                <div id="myPager"></div>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div><!-- /.row -->