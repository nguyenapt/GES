@using GES.Common.Resources
@using GES.Clients.Web.Configs
@{
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
    ViewBag.Title = "Reset Password Link Sent";
}
<h4>@Resources.ResetPasswordLinkSent</h4>
<hr/>
<p class="box-msg">@Resources.Success!</p>
<p class="box-msg">@Resources.ForgotPasswordConfirmMessage1</p>
<p class="box-msg">@Resources.ForgotPasswordConfirmMessage2</p>
<p class="box-msg">@Html.Raw(string.Format(Resources.ForgotPasswordConfirmMessage3, Html.ActionLink(Resources.Here.ToLower(), "ForgotPassword", "Authentication"), $"<a href='mailto:@SiteSettings.MailContact'>{Resources.Administrators.ToLower()}</a>"))</p>
<div class="row">
    <div class="col-xs-6 col-xs-offset-3">
        <a href="/" class="btn btn-primary-new btn-block btn-flat">@Resources.ReturnToLogin</a>                
    </div><!-- /.col -->
</div>