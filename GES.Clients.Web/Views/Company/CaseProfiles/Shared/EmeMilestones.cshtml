@model GES.Clients.Web.Models.ModalPopupViewModel
@using GES.Clients.Web.Helpers
@using GES.Common.Configurations
@using GES.Common.Resources

<div class="ges-content-block">
    <div class="header">
        <div class="title col-lg-9 col-md-8 col-xs-12 ">
            <p>@Resources.Milestones</p>
           
        </div>
    </div>
    @*<div>
        <p>
            Standardised milestone system launched in March 2016. Previous milestones are listed for case continuity.
        </p>
    </div>*@
    <br />
    <hr class="style10" />
    @if (Model.DateContentWithAttributePairs != null && Model.DateContentWithAttributePairs.Count > 0)
    {
        foreach (var pair in Model.DateContentWithAttributePairs)
        {
            <div class="row">
                
                <div class="col-md-12">
                    <table style="width: 100%; height: 100%">
                        <tr>
                            <td style="width: 2%; vertical-align: center"><i class="fa fa-flag" aria-hidden="true"></i></td>
                            <td style="width: 2%; vertical-align: center"><img class="tooltip-hint" status-icon alt="milestone" src="/Content/img/icons/@pair.Attribute" style="width:20px" /></td>
                            <td vertical-align: bottom>@Html.Raw(pair.Value)</td>
                            <td style="width: 15%; vertical-align: bottom" align="right"><i class="fa fa-calendar" aria-hidden="true"></i> @Html.Raw(pair.Key)</td>
                        </tr>
                    </table>
                </div>
                
            </div>
            if (Model.DateContentWithAttributePairs.IndexOf(pair) < Model.DateContentWithAttributePairs.Count - 1)
            {
                <hr class="style10" />
            }
        }
    }
    else
    {
        @Html.Raw(Resources.NoItemsInArchive);
    }
    
</div>